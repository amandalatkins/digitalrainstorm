<video class="dr-vid-header" poster="/img/rain.jpg" playsinline autoplay muted loop preload> 
	<source src="/img/digital-rainstorm-engaging-web-experiences.mp4" type="video/mp4">
</video>

<header class="home-header">

	<div class="content">

		<h1>Hello!</h1>
		<h3>I'm Amanda. <br class="show-on-mobile"/>How may I help you?</h3>
		<div id="rotating-services">
            {{#each services}}
                {{this.service}}{{#if @last}}{{else}},{{/if}}
            {{/each}}
		</div>
		<a class="button main-cta contact-link" href="#" onclick="ga('send', 'event', 'Header Click: Let\'s Work Together');">Let's Work Together</a>

	</div>

	<div class="scroll-dongle" onclick="ga('send', 'event', 'Header Click: Scroll Dongle');"></div>

</header>

{{>nav isHome=true services=services }}

{{> testimonial testimonial=testimonials.[0] }}

{{#each projects.[0]}}
    <section class="port-piece">
        <div class="grid-container">
            <div class="grid-x grid-margin-x align-middle">
                <div class="small-12 medium-6 cell">
                    <a href="{{url}}" target="_blank" rel="nofollow"><img src="/img/portfolio/{{img}}"/></a>
                </div>
                <div class="small-12 medium-6 cell port-description">
                        <p class="title">{{name}}</p>
                        <p class="service">{{services}}</p>
                        <p class="description">{{{desc}}}</p>
                        {{#ifEquals category "web"}}
                            <a class="port-link button orange outline" href="{{url}}" target="_blank" onclick="ga('send', 'event','Visit: {{name}}');">Visit Site <span class="fa fa-external-link"></span></a>
                        {{else}}
                            <a class="port-link button orange outline" href="{{url}}" target="_blank" onclick="ga('send', 'event','Visit: {{name}}');">GitHub Repo <span class="fa fa-external-link"></span></a>
                        {{/ifEquals}}
                </div>
            </div>
        </div>
    </section>
{{/each}}

